@model ShoppingWeb.MvcClient.DTOs.Common.PagedResultDTO<ShoppingWeb.MvcClient.DTOs.Promotion.PromotionResponseDTO>

@{
    ViewData["Title"] = "Promotion Management";
    var totalPages = (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize);
    var currentPage = Model.Page;
    var pageSize = Model.PageSize;
}

<h2 class="mb-4">Promotion Management</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a class="btn btn-primary mb-3" href="@Url.Action("Create")">+ Add New Promotion</a>

@if (Model.Items == null || !Model.Items.Any())
{
    <p>No promotions found.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Discount (%)</th>
                <th>Discount (₫)</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var promo in Model.Items)
            {
                <tr>
                    <td>@promo.Title</td>
                    <td>@promo.DiscountPercentage?.ToString("0.##")</td>
                    <td>@promo.DiscountAmount?.ToString("N0")</td>
                    <td>@promo.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@promo.EndDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(promo.IsActive ? "bg-success" : "bg-secondary")">
                            @(promo.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" href="@Url.Action("Detail", new { id = promo.PromotionId })">View</a>
                        <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = promo.PromotionId })">Edit</a>
                        <form method="post" asp-action="Delete" asp-route-id="@promo.PromotionId"
                              style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this promotion?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = pageSize })">@i</a>
                </li>
            }
        </ul>
    </nav>
}

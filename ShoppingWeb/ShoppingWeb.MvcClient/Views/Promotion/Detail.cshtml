@model ShoppingWeb.MvcClient.DTOs.Promotion.PromotionDetailViewModel

@{
    ViewData["Title"] = "Promotion Detail";
}

<h2 class="mb-3">Promotion Details</h2>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Promotion.Title</h4>
        <p class="card-text"><strong>Description:</strong> @Model.Promotion.Description</p>
        <p class="card-text">
            <strong>Discount:</strong>
            @if (Model.Promotion.DiscountPercentage.HasValue)
            {
                @($"{Model.Promotion.DiscountPercentage.Value}%")
            }
            else if (Model.Promotion.DiscountAmount.HasValue)
            {
                @($"{Model.Promotion.DiscountAmount.Value:C}")
            }
            else
            {
                <span>No discount</span>
            }
        </p>
        <p class="card-text"><strong>Start Date:</strong> @Model.Promotion.StartDate.ToString("dd/MM/yyyy")</p>
        <p class="card-text"><strong>End Date:</strong> @Model.Promotion.EndDate.ToString("dd/MM/yyyy")</p>
        <p class="card-text"><strong>Active:</strong> @(Model.Promotion.IsActive ? "Yes" : "No")</p>
    </div>
</div>

<h3>Products in this Promotion</h3>

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@Url.Content("~/" + product.ImageUrl)" alt="Image" width="100" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                    </td>
                    <td>@product.ProductName</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found in this promotion.</p>
}

@model ShoppingWeb.MvcClient.DTOs.Common.PagedResultDTO<ShoppingWeb.MvcClient.DTOs.Order.OrderResponseDTO>

@{
    ViewBag.Title = "Order List";
}

<h2>Order List</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User Name</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Items)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserName</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>@order.OrderDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Detail", "Orders", new { id = order.OrderId })">Detail</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("UpdateStatus", "Orders", new { id = order.OrderId })">Update Status</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @{
            int totalPages = (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize);
        }

@model ShoppingWeb.MvcClient.DTOs.Order.UpdateOrderStatusDTO

@{
    ViewBag.Title = "Update Order Status";
    var orderId = ViewBag.OrderId;
}

<h2>Update Order Status</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" asp-action="UpdateStatus" asp-route-id="@orderId">
    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" asp-for="Status">
            <option value="Pending">Pending</option>
            <option value="Processing">Processing</option>
            <option value="Shipped">Shipped</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" href="@Url.Action("Detail", new { id = orderId })">Back</a>
</form>
